import React, { useState, useEffect, useRef } from 'react';
import { initializeApp } from 'firebase/app';
import { 
  getFirestore, 
  collection, 
  addDoc, 
  onSnapshot, 
  updateDoc, 
  deleteDoc, 
  doc, 
  query, 
  orderBy 
} from 'firebase/firestore';
import { 
  getAuth, 
  signInAnonymously, 
  signInWithCustomToken, 
  onAuthStateChanged 
} from 'firebase/auth';
import { 
  PlusCircle, 
  ExternalLink, 
  CheckCircle2, 
  Circle, 
  Trash2, 
  MessageSquare, 
  User, 
  Bell, 
  Search,
  Layout,
  MapPin,
  Eye,
  List as ListIcon,
  X,
  Info,
  Users,
  UserPlus
} from 'lucide-react';

// --- Firebase Configuration ---
const firebaseConfig = JSON.parse(__firebase_config);
const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = typeof __app_id !== 'undefined' ? __app_id : 'web-review-app-v2';

export default function App() {
  const [user, setUser] = useState(null);
  const [notes, setNotes] = useState([]);
  const [members, setMembers] = useState([]);
  const [loading, setLoading] = useState(true);
  const [viewMode, setViewMode] = useState('list'); // 'list', 'visual', 'members'
  const [isFormOpen, setIsFormOpen] = useState(false);
  const [searchTerm, setSearchTerm] = useState('');
  const [filterStatus, setFilterStatus] = useState('all');
  const [currentReviewUrl, setCurrentReviewUrl] = useState('');
  
  // Member Management State
  const [newMemberName, setNewMemberName] = useState('');

  // Overlay click tracking
  const [pendingCoords, setPendingCoords] = useState(null);
  const previewRef = useRef(null);

  const [formData, setFormData] = useState({
    url: '',
    assignee: '',
    content: '',
    notifyTo: '',
    posX: null,
    posY: null
  });

  useEffect(() => {
    const initAuth = async () => {
      try {
        if (typeof __initial_auth_token !== 'undefined' && __initial_auth_token) {
          await signInWithCustomToken(auth, __initial_auth_token);
        } else {
          await signInAnonymously(auth);
        }
      } catch (error) {
        console.error("Auth failed", error);
      }
    };
    initAuth();
    const unsubscribe = onAuthStateChanged(auth, setUser);
    return () => unsubscribe();
  }, []);

  // Fetch Notes and Members
  useEffect(() => {
    if (!user) return;

    // Notes Subscription
    const notesRef = collection(db, 'artifacts', appId, 'public', 'data', 'stickyNotes');
    const unsubscribeNotes = onSnapshot(query(notesRef), (snapshot) => {
      const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      data.sort((a, b) => (b.createdAt || 0) - (a.createdAt || 0));
      setNotes(data);
      setLoading(false);
    });

    // Members Subscription
    const membersRef = collection(db, 'artifacts', appId, 'public', 'data', 'teamMembers');
    const unsubscribeMembers = onSnapshot(query(membersRef), (snapshot) => {
      const data = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
      data.sort((a, b) => (a.name || "").localeCompare(b.name || ""));
      setMembers(data);
    });

    return () => {
      unsubscribeNotes();
      unsubscribeMembers();
    };
  }, [user]);

  const handleSubmit = async (e) => {
    e.preventDefault();
    if (!formData.url || !formData.content) return;

    try {
      const collectionRef = collection(db, 'artifacts', appId, 'public', 'data', 'stickyNotes');
      await addDoc(collectionRef, {
        ...formData,
        status: 'open',
        createdAt: Date.now(),
        authorId: user.uid
      });
      setFormData({ url: currentReviewUrl || '', assignee: '', content: '', notifyTo: '', posX: null, posY: null });
      setPendingCoords(null);
      setIsFormOpen(false);
    } catch (error) {
      console.error("Error adding note:", error);
    }
  };

  const handleAddMember = async (e) => {
    e.preventDefault();
    if (!newMemberName.trim()) return;
    try {
      const membersRef = collection(db, 'artifacts', appId, 'public', 'data', 'teamMembers');
      await addDoc(membersRef, {
        name: newMemberName.trim(),
        createdAt: Date.now()
      });
      setNewMemberName('');
    } catch (error) {
      console.error("Error adding member:", error);
    }
  };

  const deleteMember = async (id) => {
    const memberRef = doc(db, 'artifacts', appId, 'public', 'data', 'teamMembers', id);
    await deleteDoc(memberRef);
  };

  const toggleStatus = async (note) => {
    const noteRef = doc(db, 'artifacts', appId, 'public', 'data', 'stickyNotes', note.id);
    await updateDoc(noteRef, { status: note.status === 'open' ? 'resolved' : 'open' });
  };

  const deleteNote = async (id) => {
    const noteRef = doc(db, 'artifacts', appId, 'public', 'data', 'stickyNotes', id);
    await deleteDoc(noteRef);
  };

  const handlePreviewClick = (e) => {
    if (!previewRef.current) return;
    const rect = previewRef.current.getBoundingClientRect();
    const x = ((e.clientX - rect.left) / rect.width) * 100;
    const y = ((e.clientY - rect.top) / rect.height) * 100;
    
    setPendingCoords({ x, y });
    setFormData(prev => ({ ...prev, posX: x, posY: y, url: currentReviewUrl }));
    setIsFormOpen(true);
  };

  const filteredNotes = notes.filter(note => {
    const matchesSearch = note.url.toLowerCase().includes(searchTerm.toLowerCase()) || 
                          note.content.toLowerCase().includes(searchTerm.toLowerCase());
    const matchesStatus = filterStatus === 'all' || note.status === filterStatus;
    const matchesUrl = viewMode === 'visual' ? (note.url === currentReviewUrl) : true;
    return matchesSearch && matchesStatus && matchesUrl;
  });

  if (!user) return <div className="flex items-center justify-center h-screen"><div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div></div>;

  return (
    <div className="min-h-screen bg-slate-50 text-slate-900 font-sans">
      {/* Header */}
      <header className="bg-white border-b sticky top-0 z-40 shadow-sm">
        <div className="max-w-7xl mx-auto px-4 py-3 flex flex-col md:flex-row items-center justify-between gap-4">
          <div className="flex items-center gap-3">
            <div className="bg-blue-600 p-2 rounded-xl text-white">
              <MapPin className="w-5 h-5" />
            </div>
            <div>
              <h1 className="text-lg font-bold leading-tight">Site Reviewer</h1>
              <p className="text-[10px] text-slate-400 font-mono">ID: {user.uid.substring(0, 8)}</p>
            </div>
          </div>

          <div className="flex bg-slate-100 p-1 rounded-xl">
            {[
              { id: 'list', icon: ListIcon, label: '一覧' },
              { id: 'visual', icon: Eye, label: 'ビジュアル' },
              { id: 'members', icon: Users, label: 'メンバー' }
            ].map(tab => (
              <button 
                key={tab.id}
                onClick={() => setViewMode(tab.id)}
                className={`flex items-center gap-2 px-4 py-1.5 rounded-lg text-sm font-medium transition-all ${viewMode === tab.id ? 'bg-white shadow-sm text-blue-600' : 'text-slate-500'}`}
              >
                <tab.icon className="w-4 h-4" /> {tab.label}
              </button>
            ))}
          </div>

          <div className="flex items-center gap-2 w-full md:w-auto">
            <div className="relative flex-1 md:w-64">
              <Search className="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 w-4 h-4" />
              <input 
                type="text" 
                placeholder="内容で検索..." 
                className="w-full pl-9 pr-4 py-2 bg-slate-50 border rounded-full text-sm focus:ring-2 focus:ring-blue-500 outline-none"
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
              />
            </div>
            <button 
              onClick={() => {
                setPendingCoords(null);
                setFormData(prev => ({ ...prev, posX: null, posY: null }));
                setIsFormOpen(true);
              }}
              className="bg-blue-600 text-white p-2 rounded-full hover:bg-blue-700 transition-colors shadow-lg shadow-blue-200"
            >
              <PlusCircle className="w-6 h-6" />
            </button>
          </div>
        </div>
      </header>

      <main className="max-w-7xl mx-auto p-4 md:p-6">
        {viewMode === 'list' && (
          <div className="space-y-6">
            <div className="flex gap-2 p-1 bg-slate-200/50 rounded-xl w-fit">
              {['all', 'open', 'resolved'].map(s => (
                <button
                  key={s}
                  onClick={() => setFilterStatus(s)}
                  className={`px-4 py-1 rounded-lg text-xs font-bold transition-all ${filterStatus === s ? 'bg-white text-blue-600 shadow-sm' : 'text-slate-500'}`}
                >
                  {s === 'all' ? 'すべて' : s === 'open' ? '未対応' : '解決済み'}
                </button>
              ))}
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {filteredNotes.map((note) => (
                <div key={note.id} className={`group bg-white rounded-2xl border border-slate-200 overflow-hidden hover:shadow-xl transition-all ${note.status === 'resolved' ? 'opacity-60' : ''}`}>
                  <div className="p-5">
                    <div className="flex justify-between items-start mb-3">
                      <div className="flex flex-col gap-1 overflow-hidden">
                        <div className="flex items-center gap-2">
                          <span className={`text-[10px] font-bold px-2 py-0.5 rounded-full ${note.posX !== null ? 'bg-orange-100 text-orange-600' : 'bg-slate-100 text-slate-500'}`}>
                            {note.posX !== null ? '位置指定あり' : '汎用'}
                          </span>
                          <a href={note.url} target="_blank" className="text-xs text-blue-600 font-medium truncate flex items-center gap-1 hover:underline">
                            <ExternalLink className="w-3 h-3" /> {note.url}
                          </a>
                        </div>
                        <span className="text-[10px] text-slate-400">{new Date(note.createdAt).toLocaleString()}</span>
                      </div>
                      <button onClick={() => toggleStatus(note)} className={`p-1.5 rounded-full transition-colors ${note.status === 'resolved' ? 'bg-green-100 text-green-600' : 'bg-slate-100 text-slate-300 hover:text-blue-500'}`}>
                        {note.status === 'resolved' ? <CheckCircle2 className="w-5 h-5" /> : <Circle className="w-5 h-5" />}
                      </button>
                    </div>
                    <p className={`text-sm font-medium leading-relaxed mb-4 whitespace-pre-wrap ${note.status === 'resolved' ? 'line-through text-slate-400' : 'text-slate-700'}`}>
                      {note.content}
                    </p>
                    <div className="flex items-center justify-between pt-4 border-t border-slate-50">
                      <div className="flex items-center gap-3">
                        <div className="flex flex-col">
                          <span className="text-[9px] text-slate-400 font-bold uppercase">担当</span>
                          <span className="text-xs font-bold">{note.assignee || '-'}</span>
                        </div>
                        <div className="flex flex-col">
                          <span className="text-[9px] text-slate-400 font-bold uppercase">通知</span>
                          <span className="text-xs font-bold">{note.notifyTo || '-'}</span>
                        </div>
                      </div>
                      <button onClick={() => deleteNote(note.id)} className="text-slate-300 hover:text-red-500 transition-colors p-1">
                        <Trash2 className="w-4 h-4" />
                      </button>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        {viewMode === 'visual' && (
          <div className="flex flex-col gap-4">
            <div className="bg-white p-4 rounded-2xl border shadow-sm flex flex-col md:flex-row items-center gap-4">
              <div className="flex-1 w-full">
                <input 
                  type="text" 
                  placeholder="修正したいサイトのURLを入力 (例: https://example.com)"
                  className="w-full px-4 py-2 border rounded-xl bg-slate-50 outline-none focus:ring-2 focus:ring-blue-500 text-sm font-medium"
                  value={currentReviewUrl}
                  onChange={(e) => setCurrentReviewUrl(e.target.value)}
                />
              </div>
              <div className="flex items-center gap-4 text-xs text-slate-500 font-medium">
                <div className="flex items-center gap-1"><Info className="w-3 h-3 text-blue-500" /> 画面内をクリックして付箋を配置（解決済みは非表示）</div>
              </div>
            </div>

            <div className="relative w-full aspect-video bg-white border rounded-3xl overflow-hidden shadow-2xl">
              {!currentReviewUrl ? (
                <div className="absolute inset-0 flex flex-col items-center justify-center text-slate-300">
                  <Layout className="w-16 h-16 mb-4 opacity-20" />
                  <p className="font-bold">URLを入力してプレビューを開始してください</p>
                </div>
              ) : (
                <>
                  <iframe 
                    src={currentReviewUrl} 
                    className="w-full h-full pointer-events-none" 
                    title="Site Preview"
                  />
                  {/* Click Overlay */}
                  <div 
                    ref={previewRef}
                    onClick={handlePreviewClick}
                    className="absolute inset-0 z-10 cursor-crosshair"
                  >
                    {filteredNotes.filter(n => n.posX !== null && n.status !== 'resolved').map((note, idx) => (
                      <div 
                        key={note.id}
                        className={`absolute -translate-x-1/2 -translate-y-1/2 group z-20`}
                        style={{ left: `${note.posX}%`, top: `${note.posY}%` }}
                        onClick={(e) => e.stopPropagation()}
                      >
                        <div className={`w-6 h-6 rounded-full flex items-center justify-center text-[10px] font-bold text-white shadow-lg transition-transform hover:scale-125 bg-orange-500`}>
                          {idx + 1}
                        </div>
                        <div className="absolute top-full mt-2 left-1/2 -translate-x-1/2 w-48 bg-slate-900/90 text-white p-2 rounded-lg text-[10px] opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-pre-wrap shadow-xl backdrop-blur-sm">
                          <div className="font-bold mb-1">担当: {note.assignee || '未設定'}</div>
                          {note.content}
                        </div>
                      </div>
                    ))}
                    
                    {pendingCoords && (
                      <div 
                        className="absolute -translate-x-1/2 -translate-y-1/2 w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center text-white animate-pulse z-30 shadow-lg border-2 border-white"
                        style={{ left: `${pendingCoords.x}%`, top: `${pendingCoords.y}%` }}
                      >
                        <PlusCircle className="w-4 h-4" />
                      </div>
                    )}
                  </div>
                </>
              )}
            </div>
          </div>
        )}

        {viewMode === 'members' && (
          <div className="max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-300">
            <div className="bg-white p-8 rounded-[2.5rem] border shadow-sm">
              <div className="flex items-center gap-3 mb-6">
                <div className="bg-blue-100 p-2 rounded-xl text-blue-600">
                  <UserPlus className="w-6 h-6" />
                </div>
                <div>
                  <h2 className="text-xl font-bold">メンバー管理</h2>
                  <p className="text-xs text-slate-400">付箋の担当者として選択できる名前を登録します。</p>
                </div>
              </div>

              <form onSubmit={handleAddMember} className="flex gap-3 mb-8">
                <input 
                  type="text" 
                  placeholder="メンバーの名前を入力"
                  className="flex-1 px-4 py-3 bg-slate-50 border rounded-2xl outline-none focus:ring-2 focus:ring-blue-500 font-medium"
                  value={newMemberName}
                  onChange={(e) => setNewMemberName(e.target.value)}
                />
                <button 
                  type="submit"
                  className="bg-blue-600 text-white px-6 py-3 rounded-2xl font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-100 active:scale-95"
                >
                  追加
                </button>
              </form>

              <div className="space-y-3">
                <h3 className="text-[10px] font-bold text-slate-400 uppercase tracking-widest px-2">登録済みメンバー ({members.length})</h3>
                {members.length === 0 ? (
                  <div className="text-center py-10 bg-slate-50 rounded-2xl border border-dashed text-slate-400 text-sm">
                    メンバーが登録されていません
                  </div>
                ) : (
                  <div className="grid grid-cols-1 sm:grid-cols-2 gap-3">
                    {members.map(member => (
                      <div key={member.id} className="flex items-center justify-between p-4 bg-white border rounded-2xl group hover:border-blue-200 transition-all">
                        <div className="flex items-center gap-3">
                          <div className="w-8 h-8 bg-slate-100 rounded-full flex items-center justify-center text-xs font-bold text-slate-500">
                            {member.name.charAt(0)}
                          </div>
                          <span className="font-bold text-slate-700">{member.name}</span>
                        </div>
                        <button 
                          onClick={() => deleteMember(member.id)}
                          className="text-slate-300 hover:text-red-500 p-1 transition-colors"
                        >
                          <X className="w-4 h-4" />
                        </button>
                      </div>
                    ))}
                  </div>
                )}
              </div>
            </div>
            
            <div className="bg-blue-50 p-6 rounded-[2rem] border border-blue-100 flex items-start gap-4">
              <Info className="w-5 h-5 text-blue-500 mt-1 flex-shrink-0" />
              <p className="text-sm text-blue-700 leading-relaxed">
                ここで登録したメンバーは、付箋を作成する際の<strong>「担当者」</strong>および<strong>「お知らせ相手」</strong>の選択肢に表示されます。チーム全員の名前を追加しておきましょう。
              </p>
            </div>
          </div>
        )}
      </main>

      {/* Modal Form */}
      {isFormOpen && (
        <div className="fixed inset-0 z-50 flex items-center justify-center p-4">
          <div className="absolute inset-0 bg-slate-900/40 backdrop-blur-md" onClick={() => setIsFormOpen(false)} />
          <div className="relative bg-white w-full max-w-md rounded-[2.5rem] shadow-2xl overflow-hidden animate-in zoom-in-95 duration-200">
            <div className={`p-8 text-white ${formData.posX !== null ? 'bg-orange-500' : 'bg-blue-600'}`}>
              <div className="flex justify-between items-start">
                <div>
                  <h2 className="text-2xl font-bold">付箋を追加</h2>
                  <p className="text-white/80 text-sm mt-1">
                    {formData.posX !== null ? '座標を指定して修正指示を作成します' : '修正内容を入力してください'}
                  </p>
                </div>
                <button onClick={() => setIsFormOpen(false)} className="bg-white/10 hover:bg-white/20 p-2 rounded-full transition-colors">
                  <X className="w-5 h-5" />
                </button>
              </div>
            </div>
            
            <form onSubmit={handleSubmit} className="p-8 space-y-5">
              <div>
                <label className="block text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-widest">対象URL</label>
                <input 
                  required
                  type="text" 
                  placeholder="https://example.com"
                  className="w-full px-4 py-3 bg-slate-50 border rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none transition-all text-sm font-medium"
                  value={formData.url}
                  onChange={e => setFormData({...formData, url: e.target.value})}
                />
              </div>

              <div>
                <label className="block text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-widest">修正内容</label>
                <textarea 
                  autoFocus
                  required
                  rows="4"
                  placeholder="例: このボタンの色をもう少し明るくしてください"
                  className="w-full px-4 py-3 bg-slate-50 border rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none transition-all resize-none text-sm font-medium"
                  value={formData.content}
                  onChange={e => setFormData({...formData, content: e.target.value})}
                />
              </div>

              <div className="grid grid-cols-2 gap-4">
                <div>
                  <label className="block text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-widest">担当者</label>
                  <select 
                    className="w-full px-4 py-3 bg-slate-50 border rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none transition-all text-sm font-medium appearance-none"
                    value={formData.assignee}
                    onChange={e => setFormData({...formData, assignee: e.target.value})}
                  >
                    <option value="">選択してください</option>
                    {members.map(m => <option key={m.id} value={m.name}>{m.name}</option>)}
                  </select>
                </div>
                <div>
                  <label className="block text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-widest">お知らせ相手</label>
                  <select 
                    className="w-full px-4 py-3 bg-slate-50 border rounded-2xl focus:ring-2 focus:ring-blue-500 outline-none transition-all text-sm font-medium appearance-none"
                    value={formData.notifyTo}
                    onChange={e => setFormData({...formData, notifyTo: e.target.value})}
                  >
                    <option value="">選択してください</option>
                    {members.map(m => <option key={m.id} value={m.name}>{m.name}</option>)}
                  </select>
                </div>
              </div>

              <div className="flex gap-4 pt-4">
                <button 
                  type="submit"
                  className={`flex-1 py-4 rounded-2xl text-white font-bold text-sm shadow-xl transition-all hover:-translate-y-1 active:scale-95 ${formData.posX !== null ? 'bg-orange-500 shadow-orange-100' : 'bg-blue-600 shadow-blue-100'}`}
                >
                  保存する
                </button>
              </div>
            </form>
          </div>
        </div>
      )}
    </div>
  );
}
